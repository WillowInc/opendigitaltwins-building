{
  "@id": "dtmi:com:willowinc:ElectricalCircuit;1",
  "@type": "Interface",
  "displayName": "Electrical Circuit",
  "extends" : [
    "dtmi:com:willowinc:ElectricalSystem;1"
  ],
  "contents": [
    {
      "@type": ["Property", "Voltage"],
      "name": "voltage",
      "displayName": "Voltage",
      "writable": true,
      "schema": "integer",
      "unit": "volt"
    },
    {
      "@type": "Property",
      "name": "poles",
      "displayName": "Poles",
      "writable": true,
      "schema": {
        "@type": "Enum",
        "valueSchema": "string",
        "enumValues": [
          {
            "name": "One",
            "displayName": "1",
            "enumValue": "1"
          },
          {
            "name": "Two",
            "displayName": "2",
            "enumValue": "2"
          },
          {
            "name": "Three",
            "displayName": "3",
            "enumValue": "3"
          }
        ]
      }
    },
    {
      "@type": ["Property", "Current"],
      "name": "CBRating",
      "displayName": "Circuit Breaker Rating",
      "writable": true,
      "schema": "integer",
      "unit": "ampere"
    },
    {
      "@type": "Property",
      "name": "wireSize",
      "displayName": "Wire Size",
      "writable": true,
      "schema": "string",
      "comment": "Qty-Size Phase, Qty-Size Neutral, Qty-Size Ground"
    },
    {
      "@type": "Property",
      "name": "wireType",
      "displayName": "Wire Type",
      "writable": true,
      "schema": "string"
    },
    {
      "@type": "Property",
      "name": "loadClassification",
      "displayName": {
        "en": "Load Classification"
      },
      "schema": {
        "@type": "Map",
        "mapKey": {
          "name": "loadClassification",
          "description": {
            "en": "A shortened DTDL Model Identifier (doesn't include the full path or version)  of an asset or group of assets that are connected to this circuit (i.e. HVACEquipment, AirHandlingUnit)."
          },
          "schema": "string"
        },
        "mapValue": {
          "name": "loadParameters",
          "schema": {
            "@type": "Object",
            "fields": [
              {
                "name": "consumptionPercent",
                "description": {
                  "en": "The percent of the total energy consumed by this circuit that this load classification accounts for."
                },
                "schema": "double"
              },
              {
                "name": "connectedLoad",
                "description": {
                  "en": "The total apparent power in VA connected to this circuit that this load classification accounts for."
                },
                "schema": "double"
              },
              {
                "name": "demandFactor",
                "description": {
                  "en": "The percent of the connected load that is consuming energy at any given time. This can be used to calculate the demand load as a percentage of the connected load."
                },
                "schema": "double"
              }
            ]
          }
        }
      }
    }
  ],
  "@context": "dtmi:dtdl:context;2"
}

      },
      "fields": [
        {
          "name": "exactType",
          "displayName": {
            "en": "Exact Type"
          },
          "description": {
            "en": "The type of Mapped identity such as ExternalIdentity, SpaceCode, or NameIdentity"
          },
          "schema": "string"
        },

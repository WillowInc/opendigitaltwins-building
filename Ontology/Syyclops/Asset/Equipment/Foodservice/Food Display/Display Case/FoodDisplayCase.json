{
  "@id": "dtmi:com:syyclops:FoodDisplayCase;1",
  "@type": "Interface",
  "displayName": {
    "en": "Food Display Case"
  },
  "description": {
    "en": "A case used to display foods for purchase in a retail space."
  },
  "extends" : [
    "dtmi:com:syyclops:FoodDisplayEquipment;1"
  ],
  "contents": [
    {
      "@type": "Property",
      "displayName": {
        "en": "contents"
      },
      "description": {
        "en": "The type of food that is stored within the food display case."
      },
      "name": "contents",
      "schema": "string",
      "writable": true
    },
    {
      "@type": "Property",
      "displayName": {
        "en": "Contents Retail Value"
      },
      "description": {
        "en": "The value of the food that is stored within the food display case based on the current retail sales price."
      },
      "name": "contentsRetailValue",
      "schema": "double",
      "writable": true
    },
    {
      "@type": ["Property", "ValueAnnotation"],
      "name": "contentsRetailValueUnit",
      "displayName": {
        "en": "Contents Retail Value Unit"
      },
      "description": {
        "en": "The currency associated with the contents retail value."
      },
      "annotates": "contentsRetailValue",
      "schema": "string",
      "writable": true
    },
    {
      "@type": "Property",
      "displayName": {
        "en": "Contents Replacement Cost"
      },
      "description": {
        "en": "The cost to replace the food that is stored within the food display case."
      },
      "name": "contentsReplacementCost",
      "schema": "double",
      "writable": true
    },
    {
      "@type": ["Property", "ValueAnnotation"],
      "name": "contentsReplacementCostUnit",
      "displayName": {
        "en": "Contents Replacement Cost Unit"
      },
      "description": {
        "en": "The currency associated with the contents replacement cost."
      },
      "annotates": "contentsReplacementCost",
      "schema": "string",
      "writable": true
    }
  ],
  "@context": [
    "dtmi:dtdl:context;3",
    "dtmi:dtdl:extension:quantitativeTypes;1",
    "dtmi:dtdl:extension:annotation;1",
    "dtmi:dtdl:extension:overriding;1"
  ]
}
